Import("cflags", "defines")

env = Environment()
#env["CPPPATH"] = "../include/"
#env["LIBPATH"] = "../lib/"
env["LIBS"] = ["ARToolkitPlus"]
env["CPPDEFINES"] = defines
env["CPPFLAGS"] = cflags

# examples
env.Program("simple", ["../sample/simple/main.cpp"])
env.Program("multi", ["../sample/multi/main.cpp"])

# tools
env.Program("idpatgen", ["../tools/IdPatGen/main.cpp"]+Glob("../tools/IdPatGen/PN/*.cpp"))
env.Program("patt2ppm", "../tools/patt2ppm/main.cpp")
env.Program("ppm2patt", "../tools/ppm2patt/main.cpp")

